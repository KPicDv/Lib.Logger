    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "target": "ES6",
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "typeRoots": [
        "types"
    ]
}